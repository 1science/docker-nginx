#!/usr/bin/with-contenv sh
set -e

CONSUL_URL=${CONSUL_URL:-consul.service.consul:8500}
FILECONSUL_BASEPATH=${FILECONSUL_BASEPATH:-/}

if [ -n "$FILECONSUL_PREFIX" ]; then
    status=`fileconsul status --addr $CONSUL_URL --prefix $FILECONSUL_PREFIX --basepath $FILECONSUL_BASE_PATH`
    if [ -n "$status" ]; then
        pull=`fileconsul pull --addr $CONSUL_URL --prefix $FILECONSUL_PREFIX --basepath $FILECONSUL_BASE_PATH`
    fi
fi
